<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BP">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="687dp"
        android:background="@drawable/back_"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:text="BP(Blood Pressure)"
        android:textSize="24dp"
        />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_baseline_undo_24" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView4"
        android:layout_width="206dp"
        android:layout_height="98dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069">

        <TextView
            android:layout_width="147dp"
            android:layout_height="34dp"
            android:layout_marginLeft="25dp"
            android:text="Systolic"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sys"
            android:layout_width="149dp"
            android:layout_height="65dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="0 "
            android:textSize="24dp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="206dp"
        android:layout_height="98dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.069" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="goDocList"
            android:rotationY="21"
            android:src="@drawable/doctor" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="206dp"
        android:layout_height="98dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224">

        <TextView
            android:layout_width="147dp"
            android:layout_height="34dp"
            android:layout_marginLeft="25dp"
            android:text="Diastolic"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/dias"
            android:layout_width="149dp"
            android:layout_height="65dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="0 kg"
            android:textSize="24dp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="159dp"
        android:layout_height="133dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        app:cardCornerRadius="2500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224">


        <ImageView
            android:id="@+id/bpnormal"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/bpnormal"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/bpnill"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/bpnill"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/bphigh"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:src="@drawable/bphigh"
            android:visibility="invisible" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="232dp"
        android:layout_height="55dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="428dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cardView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <TextView
            android:layout_width="327dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:text="Catagory      :"
            android:textSize="24dp" />
    </LinearLayout>

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="408dp"
        android:layout_height="194dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="231dp"
        android:src="@drawable/bpchart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <androidx.cardview.widget.CardView
        android:id="@+id/chart"
        android:layout_width="366dp"
        android:layout_height="73dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"

        android:layout_marginRight="25dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507">
        <TextView
            android:id="@+id/bloodPressur"
            android:layout_width="356dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:textColor="@color/purple_700"
            android:textSize="24dp"></TextView>

        <TextView
            android:id="@+id/condition"
            android:layout_width="356dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:fontFamily="@font/adamina"
            android:gravity="center"
            android:textColor="@color/purple_700"
            android:textSize="24dp"></TextView>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="516dp"
        android:layout_height="258dp"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-15dp"
        android:layout_marginBottom="-15dp"
        android:src="@drawable/bpstageii"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />


</androidx.constraintlayout.widget.ConstraintLayout>