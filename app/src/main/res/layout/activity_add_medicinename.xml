<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicineList">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/purple_500"
        android:text="Medicine List"
        android:textAlignment="center"
        android:backgroundTint="#63B8FF"
        android:textColor="#000000"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/listOfMedicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="Medicine Name"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listOfMedicine"
        android:id="@+id/saveMedicineName"
        android:text="SAVE"
        android:textColor="#000000"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:backgroundTint="#63B8FF"/>

    <ListView
        android:id="@+id/medicineList"
        android:layout_below="@+id/saveMedicineName"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>