<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D3F51B5"
    tools:context=".HealthStatus">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#011585">

              <ImageView
                  android:id="@+id/back_"
                  android:layout_width="40dp"
                  android:layout_height="40dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginTop="15dp"
                  android:onClick="backToDash"
                  android:src="@drawable/ic_baseline_arrow_back_ios_24" />


              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="15dp"
                  android:layout_marginTop="15dp"
                  android:text="My Health"
                  android:textColor="#FFFFFf"
                  android:textSize="32sp" />

              <ImageView
                  android:id="@+id/ques"
                  android:layout_width="40dp"
                  android:layout_height="50dp"
                  android:layout_marginLeft="135dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginRight="20dp"
                  android:src="@drawable/ic_baseline_quiz_24"
                  android:onClick="popUp"
                  />
       </LinearLayout>

       <LinearLayout
           android:id="@+id/bpPart"
           android:layout_width="395dp"
           android:layout_height="60dp"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="125dp"
           android:layout_marginRight="15dp"
           android:background="@color/cardview_light_background"
           android:onClick="goBP">

              <TextView
                  android:layout_width="200dp"
                  android:layout_height="match_parent"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="10dp"
                  android:background="@color/cardview_light_background"
                  android:fontFamily="sans-serif-medium"
                  android:gravity="center_vertical"
                  android:text="Blood Pressusre     :"
                  android:textColor="#011585"
                  android:textSize="22dp" />

              <TextView
                  android:id="@+id/bloodPressur"
                  android:layout_width="125dp"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:text="0mmhg"
                  android:textSize="15dp"
                  android:textColor="@color/black" />

              <androidx.cardview.widget.CardView
                  android:id="@+id/BloodPressure"
                  android:layout_width="70dp"
                  android:background="@drawable/ic_outline_medical_services_24"
                  android:layout_height="match_parent" />
       </LinearLayout>


       <LinearLayout

           android:layout_width="395dp"
           android:layout_height="60dp"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="200dp"
           android:layout_marginRight="15dp"
           android:background="@color/cardview_light_background"
           android:onClick="goBMI">

              <TextView
                  android:layout_width="200dp"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10dp"
                  android:background="@color/cardview_light_background"
                  android:fontFamily="sans-serif-medium"
                  android:gravity="center_vertical"
                  android:text="BMI                       :"
                  android:textColor="#011585"
                  android:textSize="24dp" />

              <TextView
                  android:id="@+id/bmi"
                  android:layout_width="125dp"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:text="0"
                  android:textSize="22dp"
                  android:textColor="@color/black"/>

              <androidx.cardview.widget.CardView
                  android:id="@+id/BMIcard"
                  android:background="@color/cardview_light_background"
                  android:layout_width="70dp"
                  android:layout_height="match_parent" />
       </LinearLayout>

       <LinearLayout

           android:layout_width="395dp"
           android:layout_height="60dp"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="275dp"
           android:layout_marginRight="15dp"
           android:background="@color/cardview_light_background"
           android:onClick="goBMR">

              <TextView
                  android:layout_width="200dp"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10dp"
                  android:background="@color/cardview_light_background"
                  android:fontFamily="sans-serif-medium"
                  android:gravity="center_vertical"
                  android:text="BMR                         :"
                  android:textColor="#011585"
                  android:textSize="22dp" />

              <TextView
                  android:id="@+id/bmr"
                  android:layout_width="125dp"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:text="0"
                  android:textSize="22dp"
                  android:textColor="@color/black"/>

              <androidx.cardview.widget.CardView
                  android:id="@+id/Bmrcard"
                  android:layout_width="70dp"
                  android:background="@color/cardview_light_background"
                  android:layout_height="match_parent" />
       </LinearLayout>


       <LinearLayout

           android:layout_width="383dp"
           android:layout_height="52dp"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="350dp"
           android:layout_marginRight="15dp"
           android:background="@color/cardview_light_background"
           android:onClick="goWeight">

              <TextView
                  android:layout_width="200dp"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10dp"
                  android:background="@color/cardview_light_background"
                  android:fontFamily="sans-serif-medium"
                  android:gravity="center_vertical"
                  android:text="Weight                     :"
                  android:textColor="#011585"
                  android:textSize="22dp" />

              <TextView
                  android:id="@+id/weight"
                  android:layout_width="125dp"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:text="0kg"
                  android:textColor="@color/black"
                  android:textSize="24dp" />

              <androidx.cardview.widget.CardView
                  android:id="@+id/WeightCard"
                  android:background="@color/cardview_light_background"
                  android:layout_width="70dp"
                  android:layout_height="match_parent" />
       </LinearLayout>


       <LinearLayout

           android:layout_width="395dp"
           android:layout_height="60dp"
           android:layout_marginLeft="15dp"
           android:layout_marginTop="425dp"
           android:layout_marginRight="15dp"
           android:background="@color/cardview_light_background"
           android:onClick="goDiabates">

              <TextView
                  android:layout_width="200dp"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="10dp"
                  android:background="@color/cardview_light_background"
                  android:fontFamily="sans-serif-medium"
                  android:gravity="center_vertical"
                  android:text="Diabates                 :"
                  android:textColor="#011585"
                  android:textSize="22dp" />

              <TextView
                  android:id="@+id/diabetes"
                  android:layout_width="125dp"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:text="0"
                  android:textSize="24dp"
                  android:textColor="@color/black"/>

              <androidx.cardview.widget.CardView
                  android:id="@+id/DiabetesCard"
                  android:background="@color/cardview_light_background"
                  android:layout_width="70dp"
                  android:layout_height="match_parent" />
       </LinearLayout>


       <ImageView
           android:id="@+id/healthBar"
           android:layout_width="147dp"
           android:layout_height="120dp"
           android:layout_marginLeft="225dp"
           android:layout_marginTop="-7dp"
           android:src="@drawable/pop" />

       <androidx.appcompat.widget.AppCompatButton
           android:id="@+id/Updatebutton"
           android:layout_width="250dp"
           android:layout_height="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="570dp"
           android:background="@drawable/rounded_button"
           android:backgroundTint="#011585"
           android:onClick="back"
           android:shadowColor="#FFFFFF"
           android:text="Update"
           android:textColor="#FFFFFF" />

</RelativeLayout>
